<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GameGo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Color for Buttons -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Ensure Buttons Use the Primary Theme -->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>

        <!-- Force Material 3 Buttons to Use Custom Colors -->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>

    </style>

    <style name="Theme.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#A9A9A9</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>



    <!-- Custom Material Button Style -->
    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
