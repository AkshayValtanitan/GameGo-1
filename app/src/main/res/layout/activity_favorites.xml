<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5e5ef6">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="50dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#804fe6"> </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="500dp" android:orientation="horizontal" android:paddingTop="15dp" android:layout_gravity="center" android:background="#e620b4">

        <EditText
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/searchbar"
            android:backgroundTint="#A9A9A9"
            android:padding="10dp"/>
        <EditText
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/searchbar"
            android:fontFamily="sans-serif"
            android:text="Favorites"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"/>

                <ImageView
                    android:id="@+id/fav_back"
                    android:layout_marginTop="5dp"
                    android:layout_width="76dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/back_arrow"/>

    <!-- change this to recycler view later        -->
        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:orientation="vertical"
            android:background="@drawable/fav_background"
            android:elevation="10dp">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="#FFFFFF"
                android:layout_gravity="center">

                <!-- Kanye Image -->
                <ImageView
                    android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ye" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:text="The Ye Quest"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_width="40dp"
                 android:layout_height="40dp"
                    android:layout_gravity="center"
                android:src="@drawable/heart" />

            </LinearLayout>



        </LinearLayout>






    </FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="10dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#c430c5"> </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="10dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#a23fd5"> </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="10dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#804fe6"> </LinearLayout>
</LinearLayout>