<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5e5ef6">

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/searchbar"
            android:iconifiedByDefault="false"/>


        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:visibility="gone"/>


        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Game Item: The Ye Quest -->

                <!-- Game Item: Black Myth Wukong -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/yeQuestLL"
                        android:layout_width="289dp"
                        android:layout_height="200dp"
                        android:background="@drawable/searchbar"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/yeQuestIV"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/ye" />

                        <TextView
                            android:id="@+id/yeQuestTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="The Ye Quest"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bmwLL"
                        android:layout_width="289dp"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/searchbar">

                        <ImageView
                            android:id="@+id/bmwIV"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/bmw" />

                        <TextView
                            android:id="@+id/bmwTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Black Myth Wukong"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Game Item: Monster Hunter World -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mhwLL"
                        android:layout_width="289dp"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/searchbar">

                        <ImageView
                            android:id="@+id/mhwIV"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/mhw" />

                        <TextView
                            android:id="@+id/mhwTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Monster Hunter: World"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Game Item: Helldivers 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/hd2LL"
                        android:layout_width="289dp"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/searchbar">

                        <ImageView
                            android:id="@+id/hd2IV"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/helldivers" />

                        <TextView
                            android:id="@+id/hd2TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Helldivers 2"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/sidebar"
        app:headerLayout="@layout/sidebar_header" />

</androidx.drawerlayout.widget.DrawerLayout>
