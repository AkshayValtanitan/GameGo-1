<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect (Dark Gray #A9A9A9) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/> <!-- Rounded corners -->
            <solid android:color="#A9A9A9"/> <!-- Shadow color -->
        </shape>
    </item>

    <!-- Outer Layer (Border) -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#E620B4"/> <!-- Pink border color -->
        </shape>
    </item>

    <!-- Inner White Layer -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FFFFFF"/> <!-- White background -->
        </shape>
    </item>

</layer-list>
